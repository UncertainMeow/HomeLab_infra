# Environment variables for GitLab stack
# Generated by Ansible - do not edit manually

# GitLab Configuration
GITLAB_ROOT_PASSWORD={{ gitlab_initial_root_password }}

{% if enable_semaphore %}
# Phase 2: Semaphore Configuration
SEMAPHORE_ADMIN_PASSWORD={{ semaphore_admin_password }}
SEMAPHORE_ACCESS_KEY={{ ansible_date_time.epoch }}{{ ansible_hostname }}
{% endif %}

{% if enable_kestra %}
# Phase 3: Kestra Configuration  
KESTRA_DB_PASSWORD={{ kestra_db_password }}
{% endif %}

# Deployment metadata
DEPLOYED_BY=ansible
DEPLOYMENT_DATE={{ ansible_date_time.iso8601 }}
ANSIBLE_HOST={{ ansible_hostname }}